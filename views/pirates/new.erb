<!-- <h1>Make your form here</h1> -->
<form action="/pirates" method="post">
  <label>Pirate</label>
    Pirate name: <input type="text" name="pirate[name]">
    Pirate weight: <input type="text" name="pirate[weight]">
    Pirate height: <input type="text" name="pirate[height]">
    <% 2.times do %>
      <% i=1 %>
      <fieldset name="ship_name_<%=i%>">
        <li>
          <label>Name</label>
          <input name="pirate[ships][][name]"/></li>
        <li>
          <label>Type</label>
          <input name="pirate[ships][][type]" />
        </li>
        <li>
          <label>Booty</label>
          <input name="pirate[ships][][booty]" />
        </li>
      </fieldset>
      <%i+=1%>
    <% end %>
  <input type="submit">
</form>
